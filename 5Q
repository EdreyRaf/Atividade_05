#include <stdio.h>
#include <string.h>
int main()
{
    int i=0;
    char x;
    char digitado[20];
    printf("Digete o seu nome: ");
    scanf("%s", digitado);
    fflush(stdin);
    printf("Digete uma letra: ");
    scanf("%c", &x);
    fflush(stdin);
    while(i<20){
        if(digitado[i]==x){
            digitado[i] = '*';
        }
        i++;
    } printf("%s",digitado);
    return 0;
}
